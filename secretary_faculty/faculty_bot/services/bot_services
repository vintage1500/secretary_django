from ..models import DynamicQuestion, QuestionCategory

class QuestionService:
    @staticmethod
    def get_dynamic_questions_by_category(category_name):
        return DynamicQuestion.objects.filter(
            category__name=category_name,
            answer=False
        ).select_related('user', 'category')
    
    @staticmethod
    def get_category_id_by_name(category_name):
        return QuestionCategory.objects.filter(
            name=category_name
        ).values_list('id', flat=True).first()